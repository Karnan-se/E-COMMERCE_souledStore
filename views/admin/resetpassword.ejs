<head>
     <%- include('./partials/header.ejs') %> 

    <link href="/css/main.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <main>
        <%- include('./partials/navigation.ejs') %>

        <section class="content-main mt-80 mb-80">
            <div class="card mx-auto card-login">
                <div class="card-body">
                    <h4 class="card-title mb-4">Forgot-password</h4>
                    <form action="/updatepassword" method="post" onsubmit=" return validateForm()">
                        <div class="mb-3">
                            <p name="userid"><%= user %></p>
                            <input class="form-control" placeholder="create password" type="text" id="password1" name="password1"></div> 
                            <input type="hidden" name="id" value="<%= user %>">
                        <div class="mb-3">
                            <input class="form-control" placeholder="confirm password" type="password" id="password" name="password"> </div> <!-- form-group// -->
                        <div class="mb-3  d-flex">
                                <input class="form-control" placeholder="enter your OTP" type="password" id="otp" name="otp">   
                                <a href="/sendotp"><input class="form-control bg-danger text-white" placeholder="enter your OTP" type="button" id="otp" name="otp" value="verify" class="bg-warning" > </a> </div>
                                
                            <div class=" text-center text-danger">
                                
                            </div>                       
                        <div class="mb-4">
                            <button type="submit" class="btn btn-primary w-100"> Login </button>
                        </div> 
                    </form>
                   
                </div>
            </div>
        </section>
        <footer class="main-footer text-center">
            <p class="font-xs">
                <script>
                document.write(new Date().getFullYear())
                </script>
            </p>
            <p class="font-xs mb-30">All rights reserved</p>
        </footer>
    </main>
   <%- include('./partials/footer.ejs') %>

   <script>
    function validateForm(){
        const emailInput = document.getElementById('password1');
            const passwordInput = document.getElementById('password');

            const emailValue = emailInput.value.trim();
            const passwordValue = passwordInput.value.trim();

            if (emailValue === '') {
                alert('password cannot be empty');
                return false;
            }

            if (passwordValue === '') {
                alert('Password cannot be empty');
                return false;
            }
            if(emailValue!==passwordValue){
                alert("password is not matching")
            }

            return true;
        }


   </script>

</body>


</html>